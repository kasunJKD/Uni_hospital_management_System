@using Uni_hospital.Utilities;
@model PagedResult<Uni_hospital.ViewModels.AvailabilityViewModel>

@{
    ViewData["Title"] = "Doctor_Availability";
}

<h1>Doctor Availability</h1>

<p>
    <a asp-action="Create">Create Availability</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Doctor_Id
            </th>
            <th>
                Doctor_Name
            </th>
            <th>
                Date
            </th>
            <th>
                Zone
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Doctor.FirstName) @Html.DisplayFor(modelItem => item.Doctor.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize
           cs-paging-pagenumber=(int)Model.PageNumber
            cs-paging-totalitems=(int)Model.TotalItems
            cs-pagenumber-param="pageNumber"
            asp-controller="Availability"
            asp-action="Index"
            cs-pager-li-current-class="page-item active"
            cs-pager-li-other-class="page-item"
            cs-pager-li-non-active-class="page-item disabled"
            cs-pager-link-current-class="page-link"
            cs-pager-link-other-class="page-link">
</cs-pager>
