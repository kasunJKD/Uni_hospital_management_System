@model List<Uni_hospital.ViewModels.AvailabilityViewModel>

@{
    ViewData["Title"] = "GetAvailabilityInfo";
}

<h1>Doctos Available</h1>

@if (Model.Count == 0)
{
  <p>No Doctors Available</p>
}
@if (Model.Count > 0)
{
               <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Appointment ID: @item.Id</h5>
                                <p class="card-text">Doctor ID: @item.DoctorId</p>
                                <p class="card-text">Date: @item.Date</p>
                                <p class="card-text">Zone: @item.zone</p>
                                <p class="card-text">Status: @item.Status</p>
                                <p class="card-text">Specialist Name: @item.SpecialistName</p>
                                        <a href="@Url.Action("CreateAppointment", new { id = item.Id })" class="btn btn-primary">Create Appointment</a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>

}

