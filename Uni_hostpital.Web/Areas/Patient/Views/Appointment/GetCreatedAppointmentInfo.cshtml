@model Uni_hospital.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "GetCreatedAppointmentInfo";
}

<div>
    <h4>Congratulations Appointment Created</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Appointment Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            Created Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Doctor Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorFirstName) @Html.DisplayFor(model => model.DoctorLastName)
        </dd>
        <dt class = "col-sm-2">
            Speciality Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialityName)
        </dd>
        <dt class = "col-sm-2">
            Patient Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientFirstName) @Html.DisplayNameFor(model => model.PatientLastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back</a>
</div>
